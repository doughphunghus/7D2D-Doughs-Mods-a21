    <property name="Extends" value="thrownAmmoPipeBomb"/>
    <!-- New properties -->
    <property name="CustomIcon" value="thrownAmmoPipeBomb"/>
    <property name="CustomIconTint" value="ffffff"/> <!-- DOUGH: lighten to vanilla color look more steelish -->
