  <property name="Explosion.DamageBonus.wood" value="1.5"/>
  <property name="Explosion.DamageBonus.metal" value=".5"/>
</append>

<set xpath="/items/item[@name='thrownAmmoPipeBomb']/property[@name='Explosion.DamageBonus.earth']/@value">1.5</set>

